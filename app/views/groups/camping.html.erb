<h1> Camping Group </h1>


<%= form_tag('/groups/camping', class: "waves-effect waves-light btn") do %>
  
<%= hidden_field_tag 'user_id', 'current_user.id' %>

<%= submit_tag ('Join Camping Group'), data: { confirm: 'You are now apart of the Camping Group' } %>


<% end %>

<div class="container">
</div>
  <%= will_paginate @user_paginator %>

  <% @camping.users.each do |user| %>
    <div class="divider"></div>
    <div class="section row">
      
      <div class="col m6 offset-m1 s6">
        
        <img src="<%= user.picture %>" class="user-img" alt="user image">

          <div class="container user-ctn">
            <div class="user-info">
            <!-- this should link to specific user's page (user_path) -->
            <span><%= link_to(user.name, user_path(user)) %></span>    
              <span>| <%= user.city %></span>
              <span>| <%= user.gender %> | </span>
          
            <p>Skill Level: <%= user.skill_level %></p>
            <div class="truncate"><%= user.more_info %></div>
          </div>
        </div>
      </div>
    </div>
 <% end %>

